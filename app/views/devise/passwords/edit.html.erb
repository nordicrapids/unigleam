<%= form_for(resource, as: resource_name, url: password_path(resource_name),html: { method: :put, class: "reset_password_new_user" }) do |f| %>
  <div class="modal-body col-md-4 col-md-offset-4">
    <div class="form-group">
      <h3 class="theme-font">Change your password</h3>
    </div>

    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", id: "user_password_reset", :class => "form-control required", :placeholder => "Enter password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control required", :placeholder => "Confirm password" %>
    </div>

    <center><%= f.button "Change my password", :class => "social-button email_login", data: { disable_with: "<i class='fa fa-spinner fa-spin fa-2x padding-left-0'></i> Changing Password...".html_safe} %></center>
    </br>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
