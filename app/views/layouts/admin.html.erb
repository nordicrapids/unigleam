<!DOCTYPE html>
<html>
<head>
  <title>Unigleam</title>
  <%= stylesheet_link_tag    'application', media: 'all'  %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="admin-content">

  <%= render "layouts/header" %>

  <div id="wrapper">

    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <div class="sidebar-brand-user">
            <p>Welcome</p>
            <p><%= current_user.full_name %></p>
          </div>
        </li>

        <li class="<%= 'active' if params[:action] == 'dashboard' %>">
          <%= link_to "<i class='fa fa-dashboard'></i> Dashboard".html_safe, admin_root_path %>
        </li>

        <li class="<%= 'active' if params[:controller] == 'admin/survey_questions' %>">
          <%= link_to "<i class='fa fa-question-circle'></i> Survey Questions".html_safe, admin_survey_questions_path %>
        </li>

        <li>
          <%= link_to "<i class='fa fa-bar-chart'></i> Usage".html_safe, admin_root_path %>
        </li>

      </ul>
    </div>

    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <%= yield %>
        </div>
      </div>
    </div>

  </div>

</body>
</html>
