<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Unigleam</title>
  <%= stylesheet_link_tag    'application', media: 'all'  %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="admin-content">

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path do %>
            <%= image_tag "company-logo.png", :class => "company-logo" %>
          <% end %>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="visible-xs <%= 'active' if params[:action] == 'dashboard' %>">
              <%= link_to "Dashboard", admin_root_path %>
            </li>
            <li class="<%= 'active' if params[:controller] == 'pages' && params[:action] == "admin_pages" %>">
              <%= link_to "Pages", admin_pages_path %>
            </li>

            <li class="<%= 'active' if params[:controller] == 'admin/topics' %>">
              <%= link_to "Topics", admin_topics_path %>
            </li>

            <li class="<%= 'active' if params[:controller] == 'admin/survey_questions' %>">
              <%= link_to "Gleams", admin_survey_questions_path %>
            </li>
  
            <li class="<%= 'active' if params[:controller] == 'users' %>">
              <%= link_to "Users", users_path %>
            </li>

            <li class="<%= 'active' if params[:controller] == 'admin/banners' %>">
              <%= link_to "Banner Setting", admin_banner_path %>
            </li>

            <li>
              <%= link_to "Logout", destroy_user_session_path, :method => "DELETE" %>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>

  <div id="wrapper">

    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <div class="sidebar-brand-user">
            <p>Welcome</p>
            <p><%= current_user.full_name %></p>
          </div>
        </li>

        <li class="<%= 'active' if params[:action] == 'dashboard' %>">
          <%= link_to "<i class='fa fa-dashboard'></i> Dashboard".html_safe, admin_root_path %>
        </li>

        <li class="<%= 'active' if params[:controller] == 'pages' && params[:action] == "admin_pages" %>">
          <%= link_to "<i class='fa fa-sticky-note'></i> Pages".html_safe, admin_pages_path %>
        </li>

        <li class="<%= 'active' if params[:controller] == 'admin/topics' %>">
          <%= link_to "<i class='fa fa-sticky-note'></i> Topics".html_safe, admin_topics_path %>
        </li>

        <li class="<%= 'active' if params[:controller] == 'admin/banners' %>">
          <%= link_to "<i class='fa fa-picture-o'></i> Banner".html_safe, admin_banner_path %>
        </li>

        <li class="<%= 'active' if params[:controller] == 'admin/survey_questions' %>">
          <%= link_to "<i class='fa fa-question-circle'></i> Gleams".html_safe, admin_survey_questions_path %>
        </li>

        <li class="<%= 'active' if params[:controller] == 'users' %>">
          <%= link_to "<i class='fa fa-user fa-fw'></i> Users".html_safe, users_path %>
        </li>

      </ul>
    </div>

    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <%= render "layouts/flash_messages" %>
          <%= yield %>
        </div>
      </div>
    </div>

  </div>

  <!-- On Scroll Animations - scrollReveal.js -->
  <script>
		var config = {
			easing: 'hustle',
			mobile:  true,
			delay:  'onload'
		}
		window.sr = new scrollReveal( config );
  </script>

</body>
</html>
