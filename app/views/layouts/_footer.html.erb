  <div class="container upper-footer">
    <div class="col-sm-12">
      <div class="col-sm-6">
        <div class="col-sm-8 col-sm-offset-2">
          <%= link_to root_path do %>
            <%= image_tag "inverse-company-logo.png", :class => "inverse-company-logo" %>
          <% end %>
