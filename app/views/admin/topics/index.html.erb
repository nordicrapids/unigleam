<div class="row">
  <div class="col-sm-12">
    <div class="pull-left">
      <h2>Topics</h2>
    </div>

    <div class="pull-right">
      <%= link_to "Add New Topic", new_admin_topic_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
<hr/>

<div class="table-responsive">
  <table class="table">
    <thead>
      <th class="col-sm-1">
        #
      </th>

      <th>
        Image
      </th>

      <th>
        Topic
      </th>

      <th>
        Action
      </th>
    </thead>

    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td>
            <%= topic.id %>
          </td>

          <td>
            <%= image_tag topic.photo.url(:preview), :class => "img-thumbnail" %>
          </td>

          <td>
            <%= topic.name %>
          </td>

          <td>
            <%= link_to "Edit", edit_admin_topic_path(topic) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
