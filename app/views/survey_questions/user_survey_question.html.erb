<div class="row">
  <div class="col-sm-12">
    <div class="pull-left">
      <h2>Gleams</h2>
    </div>

    <div class="pull-right">
      <%= link_to "Add New Gleam", new_survey_question_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
<hr/>

<div class="table-responsive">
  <table class="table">
    <thead>
      <th class="col-sm-1">
        #
      </th>

      <th>
        Topic
      </th>

      <th>
        Title
      </th>

      <th>
        Action
      </th>
    </thead>

    <tbody>
      <% @survey_questions.each do |survey_question| %>
        <tr>
          <td>
            <%= survey_question.id %>
          </td>

          <td>
            <%= survey_question.topic.name if survey_question.topic.present? %>
          </td>

          <td>
            <%= survey_question.title %>
          </td>

          <td>
            <%= link_to "Edit", edit_survey_question_path(survey_question.id), class: 'btn btn-primary' %>
            <%= link_to "Delete", survey_question_path(survey_question.id), method: 'delete', class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
