<div class="row">
  <div class="col-sm-12">
    <div class="pull-left">
      <h2>Users</h2>
    </div>

    <!-- <div class="pull-right">
      <%#= link_to "Add New Gleam", new_survey_question_path, :class => "btn btn-success" %>
    </div> -->
  </div>
</div>
<hr/>

<div class="table-responsive">
  <table class="table">
    <thead>
      <th class="col-sm-1">
        #
      </th>

      <th>
        Email
      </th>

      <th>
        Name
      </th>

      <th>
        Action
      </th>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.id %>
          </td>

          <td>
            <%= user.email %>
          </td>

          <td>
            <%= user.username.present? ? user.username : user.first_name && user.last_name %>
          </td>

          <td>
            <%= link_to "Edit", edit_user_path(user.id, type: "admin"), class: 'btn btn-primary' %>
            <%#= link_to "Delete", survey_question_path(survey_question.id), method: 'delete', class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
